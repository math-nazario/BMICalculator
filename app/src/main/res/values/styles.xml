<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextViewDescription">
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="EditText">
        <item name="android:drawablePadding">8dp</item>
        <item name="android:elevation">8dp</item>
        <item name="android:fontFamily">@font/nunito</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Button">
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CardResult">
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CardClassificationDescription">
        <item name="android:fontFamily">@font/nunito</item>
        <item name="android:padding">8dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CardClassificationResult">
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:padding">8dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>